{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "linebreak-style": ["error", "windows"],
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "js": "always"
            }
        ],
        "no-use-before-define": ["error", { "functions": false, "classes": true, "variables": true }],
        "import/prefer-default-export": "off",
        "consistent-return": "off",
        "arrow-parens": "off",
        "max-len": "off",
        "no-useless-return": "off",
        "no-return-assign": "off"
    }
}
